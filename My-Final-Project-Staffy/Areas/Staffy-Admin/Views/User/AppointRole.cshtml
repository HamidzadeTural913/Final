@model AppUser
@{
    ViewData["Title"] = "AppointRole";
}

<div>
    <div>
        <p>First Name: </p>
        <h4>@Model.FirstName</h4>
    </div>
    <div>
        <p>Last Name:</p>
        <h4>@Model.LastName</h4>
    </div>
    <div>
        <p>Email:</p>
        <h4>@Model.Email</h4>
    </div>
    <div>
        <p>Username:</p>
        <h4>@Model.UserName</h4>
    </div>

    <form asp-action="AppointRole">
        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" asp-for="IsAdmin" style="margin-left: 0px;"/>
            <span class="form-check-label" asp-validation-for="IsAdmin">
                Admin
            </span>
        </div>
        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" asp-for="IsSuperAdmin" style="margin-left: 0px;"/>
            <span class="form-check-label" asp-validation-for="IsSuperAdmin">
                SuperAdmin
            </span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Assign</button>
        </div>
    </form>
</div>
