@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                               FullName
                            </th>
                            <th>
                               Username
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                More Informarion..
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                        <tr>
                            <td>
                                @(user.FirstName + " " + user.LastName)
                            </td>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                @user.Email
                            </td>
                            <td class="d-flex">
                                <div>
                                    <a class="btn btn-success" asp-controller="User" asp-action="AppointRole" asp-route-id="@user.Id"><i class="mdi mdi-account-edit"></i></a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

