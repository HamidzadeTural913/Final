@model Blog
@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <label class="mb-3">Blog Title:</label><br />
        <input asp-for="Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label class="mb-3 mt-2">Blog Subtitle:</label><br />
        <input asp-for="Subtitle" class="form-control"/>
        <span class="text-danger" asp-validation-for="Subtitle"></span>

    </div>
    <div>
        <label class="mb-3 mt-2">Blog Date:</label><br />
        <input asp-for="Date" class="form-control"/>
        <span class="text-danger" asp-validation-for="Date"></span>

    </div>
     <div>
        <label class="mb-3">Blog Image:</label><br />
        <input asp-for="Photo" class="form-control" accept="image/*" />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create Blog</button>
    </div>
</form>

