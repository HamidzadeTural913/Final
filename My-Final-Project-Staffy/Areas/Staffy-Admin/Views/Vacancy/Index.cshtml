@model List<Vacation>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Title
                </th>
                <th>
                    Setting
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Vacation vacation in Model)
            {
                <tr>
                    <td>
                        @vacation.Id
                    </td>
                    <td>
                        @vacation.Title
                    </td>
                    <td>
                        <div class="d-flex" style="gap:10px;">
                            <div class="update">
                                <a asp-controller="Vacancy" asp-action="Edit" asp-route-id="@vacation.Id" class="btn btn-warning"><i class="mdi mdi-table-edit"></i></a>
                            </div>
                            <div class="delete">
                                <a asp-controller="Vacancy" asp-action="Delete" asp-route-id="@vacation.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

