@model Vacation
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<style>
    #vacancy .box {
        border: solid 1px #b9b9b9;
    }

        #vacancy .box input {
            display: inline-block;
            width: 100%;
            margin-top: 15px;
        }

        #vacancy .box select {
            width: 100%;
            margin-top: 15px;
        }

        #vacancy .box textarea {
            width: 100%;
            margin-top: 15px;
        }
</style>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./scss/css/style.css">
    <title>Document</title>
</head>

<body>
    <main>
        <section id="vacancy">
            <div class="container">
                <form method="post">
                    <div class="row">
                        <h3>Yeni vakansiya</h3>
                        <div class="col-lg-12">
                            <div class="box row p-3 mt-4">
                                <h5>Vakansiyanın detalları</h5>
                                <div class="col-lg-12">
                                    <input class="form-control" asp-for="Title" placeholder="Şirkət adı">
                                </div>
                                <div class="col-lg-6">
                                    <select class="form-select" asp-for="StateId" asp-items="@(new SelectList(ViewBag.State,"Id","Name"))" >
                                        <option selected value="" >Ştat növü</option>
                                    </select>
                                </div>
                                      <div class="col-lg-6">
                                    <select class="form-select" asp-for="WorkTableId" asp-items="@(new SelectList(ViewBag.Work,"Id","Name"))" >
                                        <option selected value="" >İş cədvəli</option>
                                    </select>
                                </div>
                                <div class="col-lg-12">
                                    <textarea asp-for="Description" class="form-control" placeholder="Mövzu" cols="30"
                                              rows="10"></textarea>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-12">
                            <div class="box row p-3 mt-4">
                                <h5>Tələblər & Əmək haqqı</h5>
                                <div class="col-lg-3">
                                    <select class="form-select"  asp-for="ExperienceId" asp-items="@(new SelectList(ViewBag.Experience,"Id","Name"))" >
                                        <option selected value="">Tecrube</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <select class="form-select"  asp-for="GenderId" asp-items="@(new SelectList(ViewBag.Gender,"Id","Name"))"  >
                                        <option selected value="">Cinsiyyet</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <select class="form-select" asp-for="EducationId" asp-items="@(new SelectList(ViewBag.Education,"Id","Name"))">
                                        <option selected value="">Tehsil</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <input asp-for="Ability" placeholder="Bacarıqlar">
                                </div>
                                <div class="col-lg-3">
                                    <input class="form-control" asp-for="MinSalary"
                                           placeholder="Minimum emek haqqi">
                                </div>
                                <div class="col-lg-3">
                                    <input class="form-control" asp-for="MaxSalary"
                                           placeholder="Maksimum emek haqqi">
                                </div>
                                <div class="col-lg-3">
                                    <input class="form-control" asp-for="MinAge" placeholder="Minimum yaş">
                                </div>
                                <div class="col-lg-3">
                                    <input class="form-control"asp-for="MaxAge" placeholder="Maksimum yaş">
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-6">
                            <div class="box mt-4 p-4">
                                <h5>İş yeri</h5>
                                <div class="col-lg-12">
                                   <input asp-for="Adress" placeholder="Ünvan">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="box mt-4 p-4">
                                <h5>Əlaqə və məlumat</h5>
                                <div class="col-lg-12">
                                    <input class="form-control" asp-for="Name" placeholder="Əlaqədar şəxs">
                                </div>
                                <div class="col-lg-12">
                                    <input class="form-control" asp-for="Email" placeholder="Elektron ünvan">
                                </div>
                                <div class="col-lg-12">
                                    <input class="form-control" asp-for="Phone" placeholder="Əlaqə nömrəsi">
                                </div>
                                <div class="col-lg-12">
                                    <input class="form-control" asp-for="Information" placeholder="Məlumat">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Yadda saxla</button>
                </form>
            </div>
        </section>

    </main>
</body>

</html>


