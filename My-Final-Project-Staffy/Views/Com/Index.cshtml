@model List<Com>
@{
    ViewData["Title"] = "Index";
}

  <section id="company-search">
        <div class="company-input">
          <input type="text" placeholder="Şirkət axtarışı">
         </div>  
        <div class="searchicon-company">
             <div class="search-com">
              <select name="" id="" class="form-control" >
               <option value="">Bölgə</option>
               <option value="">Azerbaijan</option>
               <option value="">Turkey</option>
               <option value="">Belgium</option>
               <option value="">Greece</option>
             </select>
             <div class="iconka"><i class="fa-solid fa-magnifying-glass"></i></div>
             </div>
        </div>
    </section>
    <section id="company">
      <div class="contain-company">
       @foreach (Com com in Model)
      {
           <div class="company-box ">
          <div class="up-content">
            <div class="right-content">
              <div class="announce-img">
                <img src="./assets/images/Company.png " alt="" />
              </div>
              <div>
                <h4><a href="company.html">@com.Name</a></h4>
                <p>@com.Bolge</p>
              </div>
            </div>
           
          </div>
          <div class="sales">
             <div class="ayliq">
              <div class="sale">
                <span>@com.ComName</span>
              </div>
              <div class="new-old">
                <span><i class="fa-solid fa-briefcase"></i></span>
              </div>
             </div>
          </div>
        </div>
      }
      </div>
    </section>

